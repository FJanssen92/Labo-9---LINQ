<Window x:Class="StudentScores.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Grades" Height="400" Width="600">
    <StackPanel Margin="10">
        <WrapPanel>
            <Button Content="Toon alle studenten" Click="AllStudents_Clicked" Margin="5"/>
            <Button Content="Studenten geslaagd (>10)" Margin="5" Click="StudentsPassed_Clicked"/>
            <Button Content="Gesorteerd op voornaam" Margin="5" Click="StudentsSortedByname_Clicked"/>
            <Button Content="Aantal per departement" Margin="5" Click="StudentsGroupedByDepartment"/>
            <Button Content="Samenvatting" Margin="5" Click="OnSummary_Clicked"/>
            <Button Content="Aantal departementen" Margin="5" Click="Button_Click"/>
        </WrapPanel>
        <ListBox Name="resultListBox" Height="250" Margin="5"/>
    </StackPanel>
</Window>
